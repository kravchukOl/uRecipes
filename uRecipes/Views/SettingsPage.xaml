<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="uRecipes.Views.SettingsPage"
             Shell.NavBarIsVisible="False"
             Title="SettingsPage">
    <VerticalStackLayout Margin="24,24,24,0">

        <!--Header-->
        <Grid Margin="0,0,0,24"
              ColumnDefinitions="50,*,80">
          
            <Image WidthRequest="50"
                   HeightRequest="50"
                   Grid.Column="0"
                   Source="knobs.png"/>

            <Label Text="This is Settings Page..."
                       FontSize="Header"
                       TextColor="#442244"
                       FontFamily="Heletica"
                       Grid.Column="1"
                       Margin="24,0,16,0"
                       VerticalOptions="CenterAndExpand"/>


            <!--User photo frame-->
            <Border StrokeShape="RoundRectangle 40"
                   Padding="0"
                   HeightRequest="80" 
                   WidthRequest="80"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Column="2">

                <!--Demo photo!!!-->

                <ImageButton Source="user_photo.jpg"
                       Aspect="Fill"
                       HeightRequest="80"
                       WidthRequest="80"/>

            </Border>

        </Grid>

        <Label FontSize="Title"
               Text="Title"/>

        <Label FontSize="Header"
               Text="Header"/>

        <Label FontSize="Body"
               Text="Body"/>

        <Label FontSize="Caption"
               Text="Caption"/>

        <Label FontSize="Default"
               Text="Default"/>

        <Label FontSize="Large"
               Text="Large"/>

        <Label FontSize="Medium"
               Text="Medium"/>

        <Label FontSize="Micro"
               Text="Micro"/>

        <Label FontSize="Small"
               Text="Small"/>

        <Label FontSize="Subtitle"
               Text="Subtitle"/>
    </VerticalStackLayout>
</ContentPage>