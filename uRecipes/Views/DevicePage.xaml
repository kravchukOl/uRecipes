<?xml version="1.0" encoding="utf-8" ?>
<uRecipes:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:uRecipes.Models"
             xmlns:tools="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:tabs="http://sharpnado.com"
             xmlns:converters="clr-namespace:uRecipes.Views.Converters"
             xmlns:viewmodel="clr-namespace:uRecipes.ViewModels"
             xmlns:controls="clr-namespace:uRecipes.Controls"
             xmlns:uRecipes="clr-namespace:uRecipes"
             x:Class="uRecipes.Views.DevicePage"
             x:DataType="viewmodel:DeviceViewModel"
             Shell.NavBarIsVisible="False"
             Title="DevicePage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TabStyle" TargetType="tabs:BottomTabItem">
                <Setter Property="SelectedTabColor" Value="#23C62F" />
                <Setter Property="UnselectedLabelColor" Value="White" />
                <!--<Setter Property="UnselectedIconColor" Value="LightGray"/>-->
                <Setter Property="FontFamily" Value="LetoTextSans" />
                <Setter Property="LabelSize" Value="18" />
                <Setter Property="IsTextVisible" Value="False" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="24,24,24,0">

        <!--Header-->
            <Grid Margin="0,0,0,24"
                  ColumnDefinitions="50,*,80">


                <Image WidthRequest="50"
                   HeightRequest="50"
                   Grid.Column="0"
                   Source="knobs.png">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer  Command="{Binding EnableDesignModeCommand}"/>
                    </Image.GestureRecognizers>
                </Image>

                <Label Text="{Binding HeaderMessage}"
                       FontSize="Header"
                       TextColor="#442244"
                       FontFamily="Heletica"
                       Grid.Column="1"
                       Margin="24,0,16,0"
                       VerticalOptions="CenterAndExpand"/>


                <!--User photo frame-->
                <Border StrokeShape="RoundRectangle 40"
                   Padding="0"
                   HeightRequest="80" 
                   WidthRequest="80"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Column="2">

                    <!--Demo photo!!!-->

                    <ImageButton Source="user_photo.jpg"
                       Aspect="Fill"
                       HeightRequest="80"
                       WidthRequest="80"/>

                </Border>

            </Grid>

            <!--Buttons-->
        <FlexLayout JustifyContent="SpaceBetween">
            <Button Text="Connect device"
                        Style="{StaticResource BaseButtonStyle}"
                        ImageSource="wlan.svg"
                        Command="{Binding ConnectDeviceCommand}">
                <Button.Shadow>
                    <Shadow Brush="Black"
                        Offset="1,6"
                        Radius="6"
                        Opacity="0.25"/>
                </Button.Shadow>


            </Button>
        </FlexLayout>

        <Grid RowDefinitions="*,*"
              ColumnDefinitions="*,*"
              RowSpacing="22"
              Margin="0,22,0,0">

            <Label VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="uCuisine Pro" 
                              TextColor="{StaticResource VioletAccent}" 
                              FontSize="Title"
                              FontFamily="LetoTextSans" FontAttributes="Bold"/>
                        <Span Text="&#10;&#10;"/>

                        <Span Text="Waiting for your commands, May"
                              FontSize="Medium"
                              TextColor="{StaticResource GreenAccent}"
                               FontFamily="LetoTextSans" FontAttributes="None"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>



            <Image Source="ucuisine_front2.png"
                   Grid.ColumnSpan="2"
                   Grid.RowSpan="3"
                   Aspect="Fill"
                   Margin="-24,0"/>

        </Grid>

        <tabs:TabHostView x:Name="TabHost"
                          Margin="-24,0"
                          BackgroundColor="#9EA5AF"
                          HeightRequest="46">

            <tabs:UnderlinedTabItem Label="Basics" Style="{StaticResource TabStyle}" 
                                    UnderlineHeight="3" />
            <tabs:UnderlinedTabItem Label="Surface" Style="{StaticResource TabStyle}" 
                                    UnderlineHeight="3"/>
            <tabs:UnderlinedTabItem Label="Display" Style="{StaticResource TabStyle}"
                                    UnderlineHeight="3"/>
            <tabs:UnderlinedTabItem Label="Connection" Style="{StaticResource TabStyle}"
                                    UnderlineHeight="3"/>



        </tabs:TabHostView>
    </VerticalStackLayout>
</uRecipes:BasePage>