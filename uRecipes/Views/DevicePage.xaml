<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:uRecipes.Models"
             x:Class="uRecipes.Views.DevicePage"
             Shell.NavBarIsVisible="False"
             Title="DevicePage">

    <VerticalStackLayout>
        <VerticalStackLayout Margin="24,24,24,0">

            <!--Header-->
            <Grid Margin="0,0,0,24"
                  ColumnDefinitions="50,*,80">


                <Image WidthRequest="50"
                   HeightRequest="50"
                   Grid.Column="0"
                   Source="knobs.png"/>

                <Label Text="Here, you can adjust your device's options and preferences."
                       FontSize="14"
                       WidthRequest="178"
                       TextColor="#442244"
                       FontFamily="Heletica"
                       Grid.Column="1"
                       Padding="16,0"
                       VerticalOptions="CenterAndExpand"/>


                <!--User photo frame-->
                <Border StrokeShape="RoundRectangle 40"
                   Padding="0"
                   HeightRequest="80" 
                   WidthRequest="80"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Column="2">

                    <!--Demo photo!!!-->

                    <ImageButton Source="user_photo.jpg"
                       Aspect="Fill"
                       HeightRequest="80"
                       WidthRequest="80"/>

                </Border>

            </Grid>

            <FlexLayout JustifyContent="SpaceBetween">
                <Button Text="Connect device"
                        Style="{StaticResource BaseButtonStyle}"
                        ImageSource="wlan.svg">
                    <Button.Shadow>
                        <Shadow Brush="Black"
                        Offset="1,6"
                        Radius="6"
                        Opacity="0.25"/>
                    </Button.Shadow>
                    
                    
                </Button>
            </FlexLayout>
        </VerticalStackLayout>

        <Grid RowDefinitions="Auto,*"
              ColumnDefinitions="Auto,*"
              Margin="0,22,0,0">

            <Image Source="ucuisine_front2.png"
                   Grid.ColumnSpan="2"
                   Grid.RowSpan="2"
                   Aspect="Fill"/>

        </Grid>
    </VerticalStackLayout>

</ContentPage>