<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="uRecipes.Views.RecipePage"
             xmlns:tools="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model="clr-namespace:uRecipes.Models"
             xmlns:viewmodel="clr-namespace:uRecipes.ViewModels"
             x:DataType="viewmodel:RecipeViewModel"
             Shell.NavBarIsVisible="False"
             Shell.PresentationMode="ModalAnimated"
             Title="RecipePage">

    <!--Setting Appearing Event to Command-->
    <ContentPage.Behaviors>
        <tools:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding InitialiseCommand}"/>
    </ContentPage.Behaviors>

    <StackLayout>
        <!--Header-->
        <Grid Margin="24,24,24,24"
              MinimumHeightRequest="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <Image WidthRequest="50"
                   HeightRequest="50"
                   Grid.Column="0"
                   VerticalOptions="CenterAndExpand"
                   Source="arrowback.svg">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding GoBackCommand}"/>
                </Image.GestureRecognizers>
            </Image>

            <Label Text="{Binding Name}"
                       FontSize="Title"
                       WidthRequest="200"
                       TextColor="#442244"
                       FontFamily="LetoTextSans"
                       Grid.Column="1"
                       Padding="24,0"
                       VerticalOptions="CenterAndExpand">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                        NumberOfTapsRequired="1"
                        Command="{Binding EnableDesignModeCommand}"/>
                </Label.GestureRecognizers>
            </Label>

                <Image Source="completed.svg"
                   WidthRequest="30"
                   Grid.Column="2"
                   IsVisible="{Binding IsCompleted}"/>
        </Grid>

        <ScrollView VerticalOptions="EndAndExpand">
            <StackLayout >
                <!--Buttons-->
                <Grid Margin="24,0,24,24"
              ColumnDefinitions="Auto,*,Auto">

                    <Button Text="Step-by-step"
                    Style="{StaticResource BaseButtonStyle}"
                    ImageSource="playico.svg"
                    Command="{Binding SwithcIsCompletedCommand}">

                        <Button.Shadow>
                            <Shadow Brush="Black"
                                Offset="1,6"
                                Radius="6"
                                Opacity="0.25"/>
                        </Button.Shadow>
                    </Button>

                    <HorizontalStackLayout Spacing="16"
                                   Grid.Column="2">

                        <Button Style="{StaticResource StrokedButtonStyle}"
                        ImageSource="share_outline.svg"/>

                        <Button Style="{StaticResource StrokedButtonStyle}"
                        ImageSource="heart_outline.svg"/>

                    </HorizontalStackLayout>
                </Grid>

                
                <!--Image/Viedeo frame-->
                <Frame Padding="0"
               CornerRadius="0"
               IsClippedToBounds="True">

                    <Image Source="{Binding ImageUrl}"
                    HeightRequest="240"
                    Aspect="AspectFill"/>

                    <!--<WebView Source="{Binding VideoUrl}"
                 MinimumHeightRequest="324"
                 MinimumWidthRequest="380"
                 HeightRequest="324"
                 WidthRequest="380"/>-->

                </Frame>
                
                <!--Author and social info-->
                <Grid Margin="24,10"
                      ColumnDefinitions="*,75,85"
                      ColumnSpacing="4">

                    <Label FontSize="Medium"
                           FontFamily="HelveticaBold"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           Grid.Column="0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="By " TextColor="{StaticResource VioletAccent}" FontAttributes="Bold" />
                                <Span Text="{Binding Author}" TextColor="{StaticResource GreenAccent2}" FontAttributes="Bold"/>
                            </FormattedString>
                        </Label.FormattedText>

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowRecipesByAuthorCommand}"
                                                  CommandParameter="{Binding AuthorId}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label FontSize="Body"
                           Text="123 users tried this"
                           FontFamily="HelveticaBold"
                           TextColor="{StaticResource VioletAccent}"
                           Grid.Column="1"
                           VerticalOptions="Center">
                    </Label>

                    <!--Demo Users bar-->
                    <HorizontalStackLayout Grid.Column="2" 
                                           HorizontalOptions="Center">
                        <Frame WidthRequest="34"
                               HeightRequest="34"
                               CornerRadius="17"
                               BorderColor="{StaticResource PrimaryDark}"
                               IsClippedToBounds="True">

                            <Image WidthRequest="34"
                                   HeightRequest="34"
                                   Aspect="Fill"
                                   Source="user_photo1.jpg"/>

                        </Frame>
                        <Frame Margin="-10,0"
                               WidthRequest="34"
                               HeightRequest="34"
                               CornerRadius="17"
                               BorderColor="{StaticResource PrimaryDark}"
                               IsClippedToBounds="True">

                            <Image WidthRequest="34"
                                   HeightRequest="34"
                                   Aspect="Fill"
                                   Source="user_photo2.jpg"/>

                        </Frame>
                        <Frame WidthRequest="34"
                               HeightRequest="34"
                               CornerRadius="17"
                               BorderColor="{StaticResource PrimaryDark}"
                               IsClippedToBounds="True">

                            <Image WidthRequest="34"
                                   HeightRequest="34"
                                   Aspect="Fill"
                                   Source="user_photo3.jpg"/>

                        </Frame>
                    </HorizontalStackLayout>

                </Grid>
             
                <!--Decription Card-->
                <Border Padding="24,24,24,44"
                       BackgroundColor="#E0FCF8"
                       Stroke="#E0FCF8">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20,20,0,0"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Radius="8"
                                Opacity="0.25"/>
                    </Border.Shadow>

                    <Label Text="{Binding Description}"
                               TextColor="{StaticResource VioletAccent}"
                               FontFamily="OpenSansRegular">
                    </Label>

                </Border>
                
                <!--Ingredients Card-->
                <Border Padding="24,24,24,44"
                        Margin="0,-20,0,0"
                        BackgroundColor="#FFF9E4"
                        Stroke="#FFF9E4">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20,20,0,0"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Radius="8"
                                Opacity="0.25"/>
                    </Border.Shadow>

                    <Grid ColumnDefinitions="*, Auto">

                        <Label FontSize="Medium"
                               FontFamily="HelveticaBold"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               Grid.Column="0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Ingredients for &#10;" TextColor="{StaticResource VioletAccent}" FontAttributes="Bold" />
                                    <Span Text="{Binding PersonServ}" TextColor="{StaticResource VioletAccent}" FontAttributes="None"/>
                                    <Span Text=" serving" TextColor="{StaticResource VioletAccent}" FontAttributes="None"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Border WidthRequest="100"
                                HeightRequest="36"
                                Stroke="{StaticResource Gray450}"
                                BackgroundColor="Transparent"
                                Grid.Column="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>

                            <FlexLayout AlignContent="SpaceBetween"
                                        Padding="0">
                                
                                <Label Text="-"
                                       Margin="10,0"
                                       FontSize="Title"
                                       VerticalOptions="Center"/>
                                
                                <Label Text="{Binding PersonServ}"
                                       VerticalOptions="Center"
                                       FontSize="Medium"/>
                                
                                <Label Text="+"
                                       Margin="10"
                                       VerticalOptions="Center"/>
                                
                            </FlexLayout>
                        </Border>
                                
                    </Grid>
                </Border>
                
                <!--Nutrition Card-->
                <Border Padding="24,24,24,44"
                        Margin="0,-20,0,0"
                        BackgroundColor="#ffebee"
                        Stroke="#ffebee">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20,20,0,0"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Radius="8"
                                Opacity="0.25"/>
                    </Border.Shadow>

                    <Grid ColumnDefinitions="*,85">

                        <Label FontSize="Medium"
                           FontFamily="HelveticaBold"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           Grid.Column="0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Nutrition Values" TextColor="{StaticResource VioletAccent}" FontAttributes="Bold" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Grid>
                </Border>
                
            
                <!--Instructions/Preparation Card-->
                <Border Padding="24,24,24,44"
                        Margin="0,-20,0,0"
                        BackgroundColor="#ECF6FF"
                        Stroke="#ECF6FF">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20,20,0,0"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Radius="8"
                                Opacity="0.25"/>
                    </Border.Shadow>

                    <Grid ColumnDefinitions="*,85">

                        <Label FontSize="Medium"
                           FontFamily="HelveticaBold"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           Grid.Column="0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Preparation" TextColor="{StaticResource VioletAccent}" 
                                          FontAttributes="Bold" />
                                    
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Grid>
                </Border>

            </StackLayout>
        </ScrollView>
    </StackLayout>




</ContentPage>